<Page
    x:Class="NewModernWinver.Views.SystemPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background ="Transparent"
    Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}">
    <Grid>
        <ScrollViewer>
            <StackPanel x:DefaultBindMode="OneWay" HorizontalAlignment="Center" Width="436">
                <TextBlock Text="Your PC" FontFamily="Segoe UI Variable Display Semibold" FontSize="18" FontWeight="SemiBold" Foreground="{ThemeResource SystemBaseHighColor}" />
                <TextBlock Text="{x:Bind ViewModel.SystemName}" Foreground="{ThemeResource SystemBaseMediumColor}" Height="19" />
                <Rectangle x:Name="bgRect" RadiusX="8" RadiusY="8" Fill="#0E7F7F7F" Height="288" Stroke="#17606060" StrokeThickness="1" />

                <TextBlock Text="Processor" Foreground="{ThemeResource SystemBaseHighColor}" FontFamily="Segoe UI Variable Small Semibold" FontWeight="SemiBold" />
                <TextBlock Text="{x:Bind ViewModel.ProcessorName, Mode=OneTime}" Foreground="{ThemeResource SystemBaseMediumColor}" FontFamily="Segoe UI Variable Small Semibold" />

                <TextBlock Text="Base speed" Foreground="{ThemeResource SystemBaseHighColor}" FontFamily="Segoe UI Variable Small Semibold" FontWeight="SemiBold"/>
                <TextBlock Text="{x:Bind ViewModel.ClockSpeed, Mode=OneTime}" Foreground="{ThemeResource SystemBaseMediumColor}" FontFamily="Segoe UI Variable Small Semibold" />
                <ProgressBar Value="{x:Bind ViewModel.CpuUsage}" Height="4" HorizontalAlignment="Center" Width="410" />
                <TextBlock Text="{x:Bind ViewModel.CpuUsagePercent}" Foreground="{ThemeResource SystemBaseMediumColor}" Width="191" FontFamily="Segoe UI Variable Small Semibold" />
                <TextBlock Text="{x:Bind ViewModel.Threads, Mode=OneTime}" Foreground="{ThemeResource SystemBaseMediumColor}" Width="219" FontFamily="Segoe UI Variable Small Semibold" />

                <TextBlock Text="Architecture" Foreground="{ThemeResource SystemBaseHighColor}" FontFamily="Segoe UI Variable Small Semibold" />
                <TextBlock Text="{x:Bind ViewModel.ProcessorArch, Mode=OneTime}" Foreground="{ThemeResource SystemBaseMediumColor}" FontFamily="Segoe UI Variable Small Semibold" />

                <TextBlock Text="Installed RAM" Foreground="{ThemeResource SystemBaseHighColor}" FontFamily="Segoe UI Variable Small Semibold" />
                <TextBlock Text="{x:Bind ViewModel.TotalMemory}" Foreground="{ThemeResource SystemBaseMediumColor}" FontFamily="Segoe UI Variable Small Semibold" />
                <ProgressBar Value="{x:Bind ViewModel.UsedMemoryPercent}" Height="4" Width="410" />
                <TextBlock Text="{x:Bind ViewModel.UsedMemory}" Foreground="{ThemeResource SystemBaseMediumColor}" Width="191" FontFamily="Segoe UI Variable Small Semibold" />
                <TextBlock Text="{x:Bind ViewModel.FreeMemory}" Foreground="{ThemeResource SystemBaseMediumColor}" Width="219" FontFamily="Segoe UI Variable Small Semibold" />

                <TextBlock Text="Primary storage" Foreground="{ThemeResource SystemBaseHighColor}" FontFamily="Segoe UI Variable Small Semibold" />
                <ProgressBar x:Name="progressStorage" Height="4" Width="410" Value="0" />
                <TextBlock x:Name="valueTotalStorage" Text="0 GB" Foreground="{ThemeResource SystemBaseMediumColor}" Width="293" FontFamily="Segoe UI Variable Small Semibold" />
                <TextBlock x:Name="valueStorage" Text="0 GB used" Foreground="{ThemeResource SystemBaseMediumColor}" Width="191" FontFamily="Segoe UI Variable Small Semibold" />
                <TextBlock x:Name="valueFreeStorage" Text="0 GB free" Foreground="{ThemeResource SystemBaseMediumColor}" Width="219" FontFamily="Segoe UI Variable Small Semibold" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
