<Page
    x:Class="NewModernWinver.Views.SystemPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">
    <Grid>
        <ScrollViewer>
            <StackPanel x:DefaultBindMode="OneWay" HorizontalAlignment="Center" Width="436">
                <TextBlock Text="Your PC" />
                <TextBlock Text="{x:Bind ViewModel.SystemName, Mode=OneTime}" />

                <TextBlock Text="Processor" />
                <TextBlock Text="{x:Bind ViewModel.ProcessorName, Mode=OneTime}" />

                <TextBlock Text="Base speed" />
                <TextBlock Text="{x:Bind ViewModel.ClockSpeed, Mode=OneTime}" />
                <muxc:ProgressBar Value="{x:Bind ViewModel.CpuUsage}" />
                <TextBlock Text="{x:Bind ViewModel.CpuUsagePercent}" />
                <TextBlock Text="{x:Bind ViewModel.Threads, Mode=OneTime}" />

                <TextBlock Text="Architecture" />
                <TextBlock Text="{x:Bind ViewModel.ProcessorArch, Mode=OneTime}" />

                <TextBlock Text="Installed RAM" />
                <TextBlock Text="{x:Bind ViewModel.TotalMemory}" />
                <muxc:ProgressBar Value="{x:Bind ViewModel.UsedMemoryPercent}" />
                <TextBlock Text="{x:Bind ViewModel.UsedMemory}" />
                <TextBlock Text="{x:Bind ViewModel.FreeMemory}" />

                <TextBlock Text="Primary storage" />
                <muxc:ProgressBar x:Name="progressStorage" Height="4" Value="0" />
                <TextBlock x:Name="valueTotalStorage" Text="0 GB" />
                <TextBlock x:Name="valueStorage" Text="0 GB used" />
                <TextBlock x:Name="valueFreeStorage" Text="0 GB free" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
