<Page x:Name="ContainerPage"
    x:Class="NewModernWinver.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
      mc:Ignorable="d"
      muxc:BackdropMaterial.ApplyToRootOrPageBackground="True">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <Style x:Key="Win10Logo" TargetType="Image">
                        <Setter Property="Source" Value="ms-appx:///Assets/win10light.svg" />
                    </Style>

                    <Style x:Key="Win11Logo" TargetType="Image">
                        <Setter Property="Source" Value="ms-appx:///Assets/win11light.svg" />
                    </Style>
                </ResourceDictionary>

                <ResourceDictionary x:Key="Dark">
                    <Style x:Key="Win10Logo" TargetType="Image">
                        <Setter Property="Source" Value="ms-appx:///Assets/win10dark.svg" />
                    </Style>

                    <Style x:Key="Win11Logo" TargetType="Image">
                        <Setter Property="Source" Value="ms-appx:///Assets/win11dark.svg" />
                    </Style>
                </ResourceDictionary>

                <ResourceDictionary x:Key="HighContrast">
                    <Style x:Key="Win10Logo" TargetType="Image">
                        <Setter Property="Source" Value="{x:Null}" />
                    </Style>

                    <Style x:Key="Win11Logo" TargetType="Image">
                        <Setter Property="Source" Value="{x:Null}" />
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <!--VisualState to be triggered when window width is >=720 effective pixels.-->
                        <AdaptiveTrigger MinWindowWidth="720"/>
                    </VisualState.StateTriggers>

                    <VisualState.Setters>
                        <Setter Target="nvTopLevelNav.Visibility" Value="Collapsed" />
                        <Setter Target="gvTopLevelNav.Visibility" Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image
            x:Name="LogoWin10"
            Height="60"
            HorizontalAlignment="Center"
            Margin="0,45,0,0"
            Style="{ThemeResource Win10Logo}"
            VerticalAlignment="Top"
            Width="328" />
        <Image
            x:Name="LogoWin11"
            Height="60"
            HorizontalAlignment="Center"
            Margin="0,45,0,0"
            Style="{ThemeResource Win11Logo}"
            VerticalAlignment="Top"
            Width="328" />

        <GridView
            x:Name="gvTopLevelNav"
            Grid.Row="1"
            AllowDrop="True"
            CanDragItems="True"
            CanReorderItems="True"
            Padding="12"
            Visibility="Collapsed">
            <GridView.Items>
                <Frame x:Name="gvFrame1" />
                <Frame x:Name="gvFrame2" />
                <Frame x:Name="gvFrame3" />
                <Frame x:Name="gvFrame4" />
            </GridView.Items>
        </GridView>

        <muxc:NavigationView
            x:Name="nvTopLevelNav"
            Grid.Row="1"
            IsBackButtonVisible="Collapsed"
            ItemInvoked="nvTopLevelNav_ItemInvoked"
            Loaded="nvTopLevelNav_Loaded"
            PaneDisplayMode="Top">
            <muxc:NavigationView.MenuItems>
                <muxc:NavigationViewItem Tag="Nav_About">
                    <TextBlock Tag="Nav_About">About</TextBlock>
                </muxc:NavigationViewItem>
                <muxc:NavigationViewItem Tag="Nav_System">
                    <TextBlock Tag="Nav_System">System</TextBlock>
                </muxc:NavigationViewItem>
                <muxc:NavigationViewItem Tag="Nav_Theme" >
                    <TextBlock Tag="Nav_Theme">Theme</TextBlock>
                </muxc:NavigationViewItem>
                <muxc:NavigationViewItem Tag="Nav_Links" >
                    <TextBlock Tag="Nav_Links">Links</TextBlock>
                </muxc:NavigationViewItem>
            </muxc:NavigationView.MenuItems>

            <Frame x:Name="contentFrame" Padding="12,0" />
        </muxc:NavigationView>

        <Button
            Grid.Row="2"
            Click="okButton_Click"
            Content="OK"
            HorizontalAlignment="Right"
            Margin="12" />
    </Grid>
</Page>
